<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/chatback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilerg3"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/photocamera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.226" />
        <TextView
            android:id="@+id/Username5"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Username"
            android:gravity="center"
            android:textSize="25dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mmesanger"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="178dp"
        android:layout_marginBottom="62dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58.2dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2.60dp"
        android:layout_marginEnd="2.60dp"
        android:layout_marginBottom="2.60dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="45.50dp"
            android:background="@color/white"
            app:cardCornerRadius="32.5dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <EditText
                android:id="@+id/writebtn"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@null"
                android:hint="Type the message....."/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sendbtn"
            android:layout_width="45.50dp"
            android:layout_height="45.50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            app:cardCornerRadius="32.5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:background="@drawable/sendbut" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>